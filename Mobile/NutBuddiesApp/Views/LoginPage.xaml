<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutBuddiesApp.Views.LoginPage"
             Title="Account">

    <VerticalStackLayout Padding="20" Spacing="16">

        <!-- LOGGED OUT -->
        <VerticalStackLayout x:Name="LoggedOutView" Spacing="12">

            <Label Text="Sign in"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True" />

            <Button Text="Login"
                    Clicked="OnLoginClicked" />

            <Label x:Name="ErrorLabel"
                   TextColor="Red" />

        </VerticalStackLayout>

        <!-- LOGGED IN -->
        <VerticalStackLayout x:Name="LoggedInView"
                             IsVisible="False"
                             Spacing="16">

            <Label x:Name="HelloLabel"
                   FontSize="20"
                   FontAttributes="Bold" />

            <Button Text="Logout"
                    BackgroundColor="#C62828"
                    TextColor="White"
                    Clicked="OnLogoutClicked" />

        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>