<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutBuddiesApp.Views.ProductDetailsPage"
             Title="Product details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label x:Name="NameLabel" FontSize="26" FontAttributes="Bold" />

            <Label x:Name="CategoryLabel" FontSize="14" TextColor="Gray" />

            <Label x:Name="PriceLabel" FontSize="18" FontAttributes="Bold" />

            <Label x:Name="StockLabel" FontSize="14" />

            <Frame Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Description" FontAttributes="Bold" />
                    <Label x:Name="DescriptionLabel" />
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Nutrition / Specs" FontAttributes="Bold" />
                    <Label x:Name="SugarFreeLabel" />
                    <Label x:Name="ProteinLabel" />
                    <Label x:Name="WeightLabel" />
                </VerticalStackLayout>
            </Frame>
            <Button Text="Add review"
                    Clicked="OnAddReviewClicked"
                    Margin="0,10,0,0"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>