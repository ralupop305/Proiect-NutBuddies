<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutBuddiesApp.Views.ProductsPage"
             Title="Products">
             
        <VerticalStackLayout Padding="12" Spacing="10">

            <Button Text="Load products" Clicked="OnLoadClicked"/>

            <CollectionView x:Name="ProductsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" Margin="0,6">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                                <!-- <Label Text="{Binding Category}" FontSize="12"/> -->
                                <Label Text="{Binding Price, StringFormat='Price: {0} RON'}"/>
                                <!-- <Label Text="{Binding StockQty, StringFormat='Stock: {0}'}" FontSize="12"/> -->
                                <!-- -->
                                <Button Text="See product details"
                                        Clicked="OnDetailsClicked"
                                        HorizontalOptions="Start" />

                            </VerticalStackLayout>
                            
                            <ImageButton Grid.Column="1"
                                         Source="cos.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="50"
                                         HeightRequest="50"
                                         Clicked="OnAddToCartClicked"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="ErrorLabel" TextColor="Red"/>
            
            
            
        </VerticalStackLayout>
    
           
        

</ContentPage>