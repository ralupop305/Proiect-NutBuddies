@page
@model Proiect.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Detalii Comandă";
}

<h1>Detalii Comandă</h1>

<div>
    <h4>Informații Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Order.Status == "Pending" ? "bg-warning" : "bg-success")">
                @Html.DisplayFor(model => model.Order.Status)
            </span>
        </dd>
    </dl>
</div>

<hr />
<h4>Produse incluse în această comandă</h4>
<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Produs</th>
            <th class="text-center">Cantitate</th>
            <th class="text-end">Preț Unitar</th>
            <th class="text-end">Subtotal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Order.OrderItems != null && Model.Order.OrderItems.Any())
        {
            foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@(item.Product?.Name ?? "Produs indisponibil")</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-end">@item.UnitPrice.ToString("F2") RON</td>
                    <td class="text-end">@((item.Quantity * item.UnitPrice).ToString("F2")) RON</td>
                    <td>
                        @if (User.Identity.Name != "ralucaAdmin@gmail.com")
                        {
                            <a asp-page="/Reviews/Create" asp-route-productId="@item.ProductId" class="btn btn-sm btn-info">
                                Lasă Review
                            </a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Nu există produse adăugate la această comandă.</td>
            </tr>
        }
    </tbody>
    @if (Model.Order.OrderItems != null && Model.Order.OrderItems.Any())
    {
        <tfoot>
            <tr class="table-secondary">
                <td colspan="3" class="text-end"><strong>Total General:</strong></td>
                <td class="text-end"><strong>@Model.Order.OrderItems.Sum(i => i.Quantity * i.UnitPrice).ToString("F2") RON</strong></td>
            </tr>
        </tfoot>
    }
</table>

<div class="mt-4">
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>