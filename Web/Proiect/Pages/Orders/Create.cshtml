@page
@model Proiect.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Order.CustomerName" class="control-label">Nume Client</label>
                <input asp-for="Order.CustomerName" class="form-control" />
                <span asp-validation-for="Order.CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Order.Phone" class="control-label">Număr Telefon</label>
                <input asp-for="Order.Phone" class="form-control" placeholder="07xx xxx xxx" />
                <span asp-validation-for="Order.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Status" class="control-label"></label>
                <input asp-for="Order.Status" class="form-control" value="Pending" readonly />
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>

            <hr />
            <h5 class="text-info">Produse în Comandă</h5>

            <table class="table" id="itemsTable">
                <thead>
                    <tr>
                        <th style="width: 60%">Produs</th>
                        <th style="width: 30%">Cantitate</th>
                        <th style="width: 10%"></th>
                    </tr>
                </thead>
                <tbody id="itemsContainer">
                    <tr class="item-row">
                        <td>
                            <select name="SelectedItems[0].ProductId" class="form-control" asp-items="Model.ProductList">
                                <option value="">-- Alege un produs --</option>
                            </select>
                        </td>
                        <td>
                            <input name="SelectedItems[0].Quantity" class="form-control" type="number" min="1" value="1" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm remove-row">X</button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <button type="button" id="addItem" class="btn btn-outline-info mb-4">+ Adaugă alt produs</button>

            <div class="form-group mt-3">
                <input type="submit" value="Create Order" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById("addItem").addEventListener("click", function () {
        var container = document.getElementById("itemsContainer");
        var index = container.getElementsByClassName("item-row").length;

        var row = document.createElement("tr");
        row.className = "item-row";
        row.innerHTML = `
            <td>
                <select name="SelectedItems[${index}].ProductId" class="form-control">
                    ${document.querySelector('select[name="SelectedItems[0].ProductId"]').innerHTML}
                </select>
            </td>
            <td>
                <input name="SelectedItems[${index}].Quantity" class="form-control" type="number" min="1" value="1" />
            </td>
            <td>
                <button type="button" class="btn btn-danger btn-sm remove-row">X</button>
            </td>
        `;
        container.appendChild(row);
    });

    document.addEventListener("click", function (e) {
        if (e.target && e.target.classList.contains("remove-row")) {
            e.target.closest("tr").remove();
            // RE-INDEXARE: Esențial pentru a nu pierde produse la salvare
            var rows = document.getElementsByClassName("item-row");
            for (var i = 0; i < rows.length; i++) {
                rows[i].querySelector('select').name = `SelectedItems[${i}].ProductId`;
                rows[i].querySelector('input').name = `SelectedItems[${i}].Quantity`;
            }
        }
    });
</script>