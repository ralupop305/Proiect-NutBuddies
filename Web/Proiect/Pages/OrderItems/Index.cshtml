@page
@model Proiect.Pages.OrderItems.IndexModel

@{
    ViewData["Title"] = "Listă Pregătire Produse (Picking List)";
}

<h1>Listă Produse pentru Expediție</h1>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>ID Comandă</th>
            <th>Status Comandă</th>
            <th>Produs</th>
            <th>Cantitate</th>
            <th>Preț Unitar</th>
            <th>Client (Email)</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItem)
        {
            <tr>
                <td>
                    @* Afișăm ID-ul comenzii pentru a ști din ce colet face parte produsul *@
                    <strong>#@Html.DisplayFor(modelItem => item.OrderId)</strong>
                </td>
                <td>
                    @* Logica de culori în funcție de statusul din Order *@
                    @if (item.Order.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark">⏳ Pending</span>
                    }
                    else if (item.Order.Status == "Paid")
                    {
                        <span class="badge bg-success">✅ Paid (To Ship)</span>
                    }
                    else if (item.Order.Status == "Shipped")
                    {
                        <span class="badge bg-primary">🚚 Shipped</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Order.Status</span>
                    }
                </td>
                <td>
                    @* Produsul care trebuie pregătit *@
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @* Cantitatea - am adăugat un mic text "buc." pentru claritate *@
                    @Html.DisplayFor(modelItem => item.Quantity) buc.
                </td>
                <td>
                    @* Prețul unitar conform proprietății tale UnitPrice *@
                    @Html.DisplayFor(modelItem => item.UnitPrice) lei
                </td>
                <td>
                    @* Numele clientului preluat din Order *@
                    @Html.DisplayFor(modelItem => item.Order.CustomerName)
                </td>
                <td>
                    @* Lăsăm doar Details, deoarece Edit și Delete nu sunt necesare aici *@
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
